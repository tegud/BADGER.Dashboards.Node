{
    "name": "Ongoing Incidents",
    "components": [
        {
          "type": "SharedDataStore",
          "title": "Open Incidents",
          "storeId": "IncidentData",
          "dataSource": "elasticsearch",
          "host": "http://logs.elasticsearch.laterooms.io:9200",
          "index": "releases-${YYYY}.${MM}",
          "timeProperties": [
            "query.filtered.filter.bool.must.0.range.@timestamp"
          ],
          "defaultTimeFrame": {
            "timeFrame": 3,
            "units": "days"
          },
          "queries": {
            "modifiers": {
              "today": { }
            },
            "query": {
              "query": {
                "filtered": {
                  "filter": {
                    "bool": {
                      "must": [
                        {
                          "range" : {
                            "@timestamp" : { }
                          }
                        },
                        {
                          "term" : {
                            "_type" : "victoropsAlert"
                          }
                        }
                      ]
                    }
                  }
                }
              },
              "size": 1000
            }
          },
          "mappings": []
        },
        {
            "type": "IncidentSummary",
            "storeId": "IncidentData",
            "span": 8
        },
        {
            "type": "OutOfHoursRota",
            "size": "small",
            "span": 4
        },
        {
            "title": "In Progress",
            "type": "OpenIncidents",
            "span":"8",
            "storeId": "IncidentData"
        },
        {
            "title": "Resolved",
            "type": "ResolvedIncidents",
            "span":"4",
            "storeId": "IncidentData"
        }
    ]
}
