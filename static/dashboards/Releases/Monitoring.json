{
    "name": "Monitoring Releases",
    "components": [
    {
          "type": "SharedDataStore",
          "title": "Release Data",
          "storeId": "ReleaseData",
          "dataSource": "elasticsearch",
          "host": "http://badger.laterooms.com:9200",
          "index": "releases-${YYYY}.${MM}",
          "timeProperties": [
            "query.filtered.filter.bool.must.0.range.@timestamp"
          ],
          "defaultTimeFrame": {
            "timeFrame": 0,
            "units": "daysAgo"
          },
          "queries": {
            "modifiers": {
              "today": { }
            },
            "query": {
              "query": {
                "filtered": {
                  "filter": {
                    "bool": {
                      "must": [
                        {
                          "range" : {
                            "@timestamp" : { }
                          }
                        },
                        {
                          "term" : {
                            "environment.raw" : "floor-11-server-cupboard"
                          }
                        }
                      ]
                    }
                  }
                }
              },
              "size": 1000
            }
          },
          "mappings": []
        },
        {
            "title": "Scheduled",
            "type": "ScheduledReleases",
            "span":"3"
        },
        {
            "title": "In Progress",
            "type": "InProgressReleases",
            "span":"6",
            "storeId": "ReleaseData"
        },
        {
            "title": "Completed",
            "type": "CompletedReleases",
            "span":"3",
            "storeId": "ReleaseData"
        }
    ]
}